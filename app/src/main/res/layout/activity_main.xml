<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInputLayout"
        android:layout_marginTop="24dp"
        android:hint="@string/number_one">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNumberOne"
            style="@style/CustomTextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInputLayout"
        android:layout_marginTop="16dp"
        android:hint="@string/number_two">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNumberTwo"
            style="@style/CustomTextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInputLayout"
        android:layout_marginTop="16dp"
        android:hint="@string/number_three">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNumberThree"
            style="@style/CustomTextInputEditText" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/soft_black"/>

    <Button
        android:id="@+id/btnOrganize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/primary"
        android:text="@string/organize" />
</LinearLayout>